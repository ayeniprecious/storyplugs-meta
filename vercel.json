{
  "version": 2,
  "routes": [
    {
      "src": "/story/(.*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(facebook|twitter|whatsapp|linkedin|telegram|instagram|threads|bot|crawler|spider|preview)"
        }
      ],
      "status": 302,
      "headers": {
        "Location": "https://storyplugs-meta-hyfy.vercel.app/api/story?slug=$1"
      }
    },
    {
      "src": "/story/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
