{
  "version": 2,
  "functions": {
    "api/story.js": {
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    {
      "src": "/story/(.*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(facebook|twitter|whatsapp|linkedin|telegram|instagram|threads|bot|crawler|spider|preview)"
        }
      ],
      "dest": "/api/story.js?slug=$1"
    },
    {
      "src": "/story/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
